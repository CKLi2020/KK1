/* components/loveseed-modal/loveseed-modal.wxss */
.loveseed-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: fadeIn 0.3s ease;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.6);
  backdrop-filter: blur(4px);
}

.modal-content {
  position: relative;
  width: 85%;
  max-width: 500rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 32rpx;
  padding: 60rpx 40rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.3);
  animation: slideUp 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
}

@keyframes slideUp {
  from {
    transform: translateY(100rpx);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

.close-btn {
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  width: 50rpx;
  height: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: rgba(255, 255, 255, 0.8);
  font-size: 40rpx;
  font-weight: bold;
  z-index: 10;
  transition: all 0.3s;
}

.close-btn:active {
  transform: scale(0.9);
  color: rgba(255, 255, 255, 1);
}

.modal-icon {
  font-size: 100rpx;
  text-align: center;
  margin-bottom: 20rpx;
  animation: bounce 1s infinite;
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

.modal-title {
  font-size: 44rpx;
  font-weight: bold;
  color: white;
  text-align: center;
  margin-bottom: 16rpx;
  text-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.modal-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  line-height: 1.6;
  margin-bottom: 40rpx;
}

.input-wrapper {
  position: relative;
  margin-bottom: 40rpx;
}

.loveseed-input {
  width: 100%;
  height: 100rpx;
  background: white;
  border-radius: 16rpx;
  font-size: 48rpx;
  font-weight: bold;
  text-align: center;
  letter-spacing: 12rpx;
  color: #667eea;
  box-shadow: 0 8rpx 16rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s;
}

.loveseed-input:focus {
  transform: scale(1.02);
  box-shadow: 0 12rpx 24rpx rgba(102, 126, 234, 0.3);
}

.input-decoration {
  position: absolute;
  bottom: -30rpx;
  left: 50%;
  transform: translateX(-50%);
  display: flex;
  gap: 12rpx;
}

.decoration-dot {
  width: 12rpx;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  animation: pulse 1.5s ease-in-out infinite;
}

.decoration-dot:nth-child(2) {
  animation-delay: 0.2s;
}

.decoration-dot:nth-child(3) {
  animation-delay: 0.4s;
}

@keyframes pulse {
  0%, 100% {
    opacity: 0.3;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.5);
  }
}

.button-group {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-bottom: 24rpx;
}

.modal-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 30rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
  border: none;
  transition: all 0.3s;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  position: relative;
  overflow: hidden;
}

.modal-btn::after {
  border: none;
}

.primary-btn {
  background: white;
  color: #667eea;
}

.primary-btn:active {
  transform: scale(0.96);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.secondary-btn {
  background: linear-gradient(135deg, #FFD700 0%, #FFA500 100%);
  color: white;
  border: none;
  height: 96rpx;
  font-size: 32rpx;
  box-shadow: 0 8rpx 20rpx rgba(255, 165, 0, 0.4);
  animation: glow 2s ease-in-out infinite;
}

@keyframes glow {
  0%, 100% {
    box-shadow: 0 8rpx 20rpx rgba(255, 165, 0, 0.4),
                0 0 20rpx rgba(255, 215, 0, 0.3);
  }
  50% {
    box-shadow: 0 8rpx 30rpx rgba(255, 165, 0, 0.6),
                0 0 40rpx rgba(255, 215, 0, 0.5);
  }
}

.secondary-btn::before {
  content: '';
  position: absolute;
  top: -50%;
  left: -50%;
  width: 200%;
  height: 200%;
  background: linear-gradient(
    45deg,
    transparent,
    rgba(255, 255, 255, 0.3),
    transparent
  );
  animation: shine 3s ease-in-out infinite;
}

@keyframes shine {
  0% {
    transform: translateX(-100%) translateY(-100%) rotate(45deg);
  }
  100% {
    transform: translateX(100%) translateY(100%) rotate(45deg);
  }
}

.secondary-btn:active {
  transform: scale(0.96);
  box-shadow: 0 4rpx 15rpx rgba(255, 165, 0, 0.5);
}

.secondary-btn .btn-icon {
  font-size: 36rpx;
  animation: bounce-icon 1s ease-in-out infinite;
}

@keyframes bounce-icon {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-4rpx);
  }
}

.btn-icon {
  font-size: 32rpx;
}

.hot-badge {
  position: absolute;
  top: -8rpx;
  right: 20rpx;
  font-size: 32rpx;
  animation: shake 0.5s ease-in-out infinite;
}

@keyframes shake {
  0%, 100% {
    transform: rotate(0deg);
  }
  25% {
    transform: rotate(-10deg);
  }
  75% {
    transform: rotate(10deg);
  }
}

.modal-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.tip-icon {
  font-size: 28rpx;
}
