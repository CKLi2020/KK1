.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.6);
  display: flex;
  justify-content: center;
  align-items: center;
  z-index: 9999;
}

.modal-container {
  width: 85%;
  max-width: 600rpx;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  position: relative;
  animation: modalFadeIn 0.3s ease;
}

@keyframes modalFadeIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

.close-btn {
  position: absolute;
  top: 20rpx;
  right: 24rpx;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.modal-title {
  text-align: center;
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 30rpx;
}

.modal-desc {
  margin-bottom: 40rpx;
}

.desc-item {
  display: flex;
  align-items: center;
  padding: 16rpx 0;
  font-size: 28rpx;
  color: #666;
}

.desc-item .icon {
  margin-right: 16rpx;
  font-size: 32rpx;
}

.modal-buttons {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-login {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background: linear-gradient(135deg, #07c160 0%, #06ad56 100%);
  color: #fff;
  font-size: 32rpx;
  font-weight: 500;
  border-radius: 44rpx;
  border: none;
  margin-bottom: 20rpx;
}

.btn-login::after {
  border: none;
}

.btn-skip {
  font-size: 28rpx;
  color: #999;
  padding: 16rpx 0;
}

.modal-tip {
  text-align: center;
  font-size: 24rpx;
  color: #bbb;
  margin-top: 20rpx;
}
