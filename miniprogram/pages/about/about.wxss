/* pages/about/about.wxss */

.header {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0 40rpx;
}

.app-icon {
  font-size: 140rpx;
  margin-bottom: 24rpx;
  text-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.3);
}

.app-name {
  font-size: 44rpx;
  font-weight: 700;
  background: linear-gradient(135deg, #6366F1 0%, #EC4899 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-bottom: 12rpx;
}

.app-version {
  font-size: 26rpx;
  color: #9CA3AF;
  background: rgba(99, 102, 241, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 20rpx;
}

/* 功能列表 */
.feature-list {
  margin-top: 16rpx;
}

.feature-item {
  display: flex;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(229, 231, 235, 0.5);
}

.feature-item:last-child {
  border-bottom: none;
}

.feature-dot {
  width: 20rpx;
  height: 20rpx;
  background: linear-gradient(135deg, #6366F1 0%, #EC4899 100%);
  border-radius: 50%;
  margin-top: 10rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 2rpx 8rpx rgba(99, 102, 241, 0.4);
}

.feature-content {
  flex: 1;
}

.feature-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #1F2937;
  display: block;
  margin-bottom: 8rpx;
}

.feature-desc {
  font-size: 26rpx;
  color: #6B7280;
  line-height: 1.6;
}

/* 步骤列表 */
.step-list {
  margin-top: 16rpx;
}

.step-item {
  display: flex;
  align-items: flex-start;
  padding: 20rpx 0;
}

.step-number {
  width: 52rpx;
  height: 52rpx;
  background: linear-gradient(135deg, #6366F1 0%, #818CF8 100%);
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  font-weight: 600;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(99, 102, 241, 0.3);
}

.step-text {
  font-size: 28rpx;
  color: #374151;
  line-height: 52rpx;
  font-weight: 500;
}

/* 信息项 */
.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid rgba(229, 231, 235, 0.5);
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  font-size: 28rpx;
  color: #6B7280;
  font-weight: 500;
}

.info-value {
  font-size: 28rpx;
  color: #1F2937;
  font-weight: 500;
}

.info-link {
  font-size: 26rpx;
  color: #6366F1;
  font-weight: 600;
}

/* 分享按钮 */
.share-btn {
  margin: 40rpx 20rpx;
  background: linear-gradient(135deg, #6366F1 0%, #EC4899 100%);
  color: #fff;
  border-radius: 50rpx;
  font-size: 32rpx;
  padding: 28rpx 0;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(99, 102, 241, 0.35);
  transition: all 0.3s ease;
}

.share-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 16rpx rgba(99, 102, 241, 0.3);
}

.share-btn::after {
  border: none;
}

.bottom-space {
  height: 60rpx;
}

/* 卡片图标 */
.card-icon {
  font-size: 36rpx;
  margin-right: 8rpx;
}
