/* pages/admin/admin.wxss */
.admin-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

/* 加载中 */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #fff;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid rgba(255,255,255,0.3);
  border-top-color: #fff;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  to { transform: rotate(360deg); }
}

/* 无权限 */
.no-access {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 60vh;
  color: #fff;
}

.no-access-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
}

.no-access-text {
  font-size: 32rpx;
}

/* 管理面板 */
.admin-panel {
  padding-bottom: 40rpx;
}

.admin-header {
  text-align: center;
  padding: 30rpx 0;
}

.admin-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #fff;
}

/* 统计区域 */
.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
}

.stats-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
}

.stat-card {
  background: rgba(255,255,255,0.95);
  border-radius: 16rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 4rpx 12rpx rgba(0,0,0,0.1);
}

.stat-card.revenue {
  grid-column: span 3;
  background: linear-gradient(135deg, #f6d365 0%, #fda085 100%);
}

.stat-card.revenue .stat-value,
.stat-card.revenue .stat-label {
  color: #fff;
}

.stat-value {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

/* 搜索区域 */
.search-section, .users-section {
  margin-top: 30rpx;
  background: rgba(255,255,255,0.95);
  border-radius: 20rpx;
  padding: 24rpx;
}

.search-section .section-title,
.users-section .section-title {
  color: #333;
}

.search-box {
  display: flex;
  gap: 16rpx;
  margin-bottom: 20rpx;
}

.search-input {
  flex: 1;
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.search-btn {
  width: 140rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: #4A90D9;
  color: #fff;
  font-size: 28rpx;
  border-radius: 12rpx;
  padding: 0;
  margin: 0;
}

.clear-btn {
  width: 140rpx;
  height: 72rpx;
  line-height: 72rpx;
  background: #999;
  color: #fff;
  font-size: 28rpx;
  border-radius: 12rpx;
  padding: 0;
  margin: 0;
}

.result-count {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
}

/* 用户列表 */
.user-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.user-item {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 20rpx;
}

.user-info {
  margin-bottom: 16rpx;
}

.user-main {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.user-nickname {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.admin-badge {
  background: linear-gradient(135deg, #FF6B6B, #FF8E53);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.vip-badge {
  background: linear-gradient(135deg, #ffd700, #ffb347);
  color: #fff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
}

.user-openid {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.copy-hint {
  font-size: 20rpx;
  color: #4A90D9;
}

.user-meta {
  display: flex;
  gap: 20rpx;
  font-size: 24rpx;
  color: #666;
}

.user-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  border-radius: 12rpx;
  padding: 0;
  margin: 0;
}

.action-btn.grant {
  background: linear-gradient(135deg, #11998e, #38ef7d);
  color: #fff;
}

.action-btn.set-admin {
  background: linear-gradient(135deg, #4A90D9, #667eea);
  color: #fff;
}

.action-btn.remove-admin {
  background: #ff6b6b;
  color: #fff;
}

.loading-users {
  text-align: center;
  padding: 40rpx;
  color: #666;
}

/* 分页 */
.pagination {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #eee;
}

.page-btn {
  width: 160rpx;
  height: 64rpx;
  line-height: 64rpx;
  font-size: 26rpx;
  background: #4A90D9;
  color: #fff;
  border-radius: 12rpx;
  padding: 0;
  margin: 0;
}

.page-btn[disabled] {
  background: #ccc;
  color: #999;
}

.page-info {
  font-size: 28rpx;
  color: #333;
}

/* 弹窗 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
}

.modal-content {
  width: 600rpx;
  background: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #eee;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 30rpx;
}

.target-user {
  margin-bottom: 24rpx;
  font-size: 28rpx;
  color: #666;
}

.target-nickname {
  color: #333;
  font-weight: bold;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  display: block;
  font-size: 26rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.picker-value {
  height: 72rpx;
  line-height: 72rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  color: #333;
}

.form-input {
  height: 72rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #eee;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 30rpx;
  border-radius: 0;
  padding: 0;
  margin: 0;
}

.modal-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.modal-btn.confirm {
  background: linear-gradient(135deg, #11998e, #38ef7d);
  color: #fff;
}
